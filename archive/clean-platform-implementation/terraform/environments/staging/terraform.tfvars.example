# Staging environment configuration
# Copy this to terraform.tfvars and fill in the values

environment  = "staging"
service_name = "clean-platform"
team_name    = "platform-team"
aws_region   = "us-east-1"

# These values will be provided by Grand Central
vpc_id     = "vpc-XXXXXXXXX"
subnet_ids = ["subnet-XXXXXXXXX", "subnet-YYYYYYYYY"]

# Database configuration
db_instance_class          = "db.t3.medium"
db_allocated_storage       = 100
db_engine_version          = "8.0.35"
db_backup_retention_period = 7
db_multi_az                = true

# ElastiCache configuration  
redis_node_type              = "cache.t3.micro"
redis_num_cache_nodes        = 2
redis_parameter_group_family = "redis7"

# Monitoring
enable_enhanced_monitoring = true
monitoring_interval        = 60

# Tags
common_tags = {
  Environment = "staging"
  Team        = "platform-team"
  Service     = "clean-platform"
  ManagedBy   = "terraform"
  Repository  = "clean-platform-implementation"
  CostCenter  = "platform-team"
}